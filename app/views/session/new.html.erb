<%= link_to 'Home', root_path %> | <%= link_to 'Sign Up', new_user_path %>

<h1>Login</h1>

<%= flash[:error] %>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil %>

  <%= submit_tag 'Login' %>

<% end %>
